import random
import time

def corrige_valor(num):
    aleatorio_uniforme = random.uniform(-10, 10)
    resp = num + num*aleatorio_uniforme/100
    return resp 

valor_acao_a = 76.40
valor_acao_b = 55.78
valor_acao_c = 68.28
valores = [valor_acao_a, valor_acao_b, valor_acao_c]

print("Valor das Ações:")
print(f"A - Empresa A (R$ {valores[0]:.2f})")
print(f"B - Empresa B (R$ {valores[1]:.2f})")
print(f"C - Empresa C (R$ {valores[2]:.2f})")

print("Dia 1", end="", flush=True)
for i in range(10):
    time.sleep(0.3)
    print("...", end="", flush=True)
print()
for i in range(len(valores)):
    valores[i] = corrige_valor(valores[i])

print("Valor das Ações:")
print(f"A - Ações Empresa A (R$ {valores[0]:.2f})")
print(f"B - Ações Empresa B (R$ {valores[1]:.2f})")
print(f"C - Ações Empresa C (R$ {valores[2]:.2f})")

print("Dia 2", end="", flush=True)
for i in range(10):
    time.sleep(0.3)
    print("...", end="", flush=True)
print()
for i in range(len(valores)):
    valores[i] = corrige_valor(valores[i])


print("Valor das Ações:")
print(f"A - Ações Empresa A (R$ {valores[0]:.2f})")
print(f"B - Ações Empresa B (R$ {valores[1]:.2f})")
print(f"C - Ações Empresa C (R$ {valores[2]:.2f})")


print("Dia 3", end="", flush=True)
for i in range(10):
    time.sleep(0.3)
    print("...", end="", flush=True)
print()
for i in range(len(valores)):
    valores[i] = corrige_valor(valores[i])
    
    

print("Valor das Ações:")
print(f"A - Ações Empresa A (R$ {valor_acao_a:.2f})")
print(f"B - Ações Empresa B (R$ {valor_acao_b:.2f})")
print(f"C - Ações Empresa C (R$ {valor_acao_c:.2f})")
